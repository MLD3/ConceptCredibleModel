digraph {
	graph [rankdir=BT]
	X [label="X=[C, U, S]" fillcolor=lightgray style=filled]
	C [label="C ~ N(0,1)" fillcolor=lightgray style=filled]
	Y [label="Y=C+U" fillcolor=lightgray style=filled]
	U [label="U=C+E"]
	E [label="E ~ N(0, 1)"]
	S [label="S=C"]
	U -> Y
	C -> Y
	C -> S
	E -> U
	S -> X
	C -> X
	U -> X
	C -> U
}
